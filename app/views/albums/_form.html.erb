<div class="mt-5 container text-center">
    <%= render "shared/errors", obj: @album%>
    <%= form_for @album do |f|%>
        <div class="form-group row">
            <div class="control-label col-lg-3">
                <%= f.label :Title %>
            </div>
            <div class="col-lg-6">
                <%= f.text_field :title, class:"form-control", placeholder:"Enter album title", autofocus: true %>
            </div>
        </div>

        <div class="form-group row">
            <div class="control-label col-lg-3">
                <%= f.label :Description %>
            </div>
            <div class="col-lg-6">
                <%= f.text_area :description, rows: 5, class:"form-control", placeholder:"Enter album description", autofocus: true %>
            </div>
        </div>

        <div class="form-group row">
            <div class="control-label col-lg-3">
                <%= f.label :Visible %>
            </div>
            <div class="ml-2">
                <span class="ml-2">
                    <%= f.radio_button :visible, false %>
                    <%= f.label :visible, "Private", :value => "false" %>
                </span>
                <br>
                <%= f.radio_button :visible, true %>
                <%= f.label :visible, "Public", :value => "true" %>
            </div>
        </div>

        
        <%= f.submit "UPDATE ALBUM", class:"mt-3 btn btn btn-outline-success"%>
    <%end%>
</div>