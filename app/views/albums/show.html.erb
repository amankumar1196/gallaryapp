<h2 class="text-center m-3"><%= @album.title %></h2>
<h4 class="text-center"><i>"<%= @album.description%>"</i></h4>
<div class="container">
<% if signed_in? && current_user == @album.user %>
    <div class="text-center mt-2 mb-1 p-1 text-center">
        <span>
            <%= link_to "Upload Image", new_album_post_path(@album), class:"btn btn-outline-success btn-md m-2" %>
            <%= link_to "Edit Album", edit_album_path, class:"btn btn-outline-info btn-md m-2 pl-4 pr-4" %>
            <%= link_to "Delete Album", album_path(@album), class:"btn btn-outline-danger btn-md m-2", method: :delete, data: {confirm: "Are you sure? "} %>
        </span>
    </div>
<%end%>
</div>

<hr>

<div class="container">
    <% @album.posts.each do |post| %>
        <div class="float-left pl-3">
            <div class="card text-center border-light bg-light" style="width:245px ; height:300px">
                <div class="card-title pt-2">
                    <%=post.title%>
                </div>
                    <%=image_tag post.file, class:"imagesize img-thumbnail rounded"%>
                <div class="text-center">
                    <%if current_user == @album.user%>
                       <%=link_to 'Delete', [post.album, post], method: :delete, data: {confirm: "Are you sure?"}%>
                    <%end%>
                </div>
            </div>
        </div>
    <%end%>
</div>

