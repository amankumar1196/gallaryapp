<h3 class="mt-5 text-center"> New Image </h2>
<div class="mt-5 container text-center">
    <%= render "shared/errors", obj: @post%>
    <%= form_for [@album,@post] do |f|%>
        <div class="form-group row">
            <div class="control-label col-lg-3">
                <%= f.label :Title %>
            </div>
            <div class="col-lg-6">
                <%= f.text_field :title, class:"form-control", placeholder:"Image title", autofocus: true %>
            </div>
        </div>

        <div class="form-group row">
            <div class="control-label col-lg-3">
                <%= f.label :Choose_Image %>
            </div>
            <div class="col-lg-6">
                <%= f.file_field :file %>
            </div>
        </div>

        <%= f.submit "Upload Image", class:"mt-3 btn btn btn-outline-success"%>
    <%end%>
</div>